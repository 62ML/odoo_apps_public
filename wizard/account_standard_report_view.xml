<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="account_report_standard_view" model="ir.ui.view">
            <field name="name">Standard Ledger</field>
            <field name="model">account.report.standard.ledger</field>
            <field name="arch" type="xml">
                <form string="Report Options" class="oe_form_configuration">
                    <header>
                        <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </header>
                    <field name="company_id" invisible="1"/>
                    <h1>Standard Report</h1>
                    <group col="4">
                        <field name="type_ledger" widget="radio"/>
                        <field name="summary"/>
                    </group>
                    <group col="4">
                        <field name="target_move"/>
                        <field name="reconciled" attrs="{'readonly': [('type_ledger', '!=', 'partner')]}"/>
                        <field name="result_selection" attrs="{'invisible': [('type_ledger', '!=', 'partner')]}"/>
                        <field name="amount_currency" groups="base.group_multi_currency"/>
                    </group>
                    <group col="2">
                        <field name="periode_date" widget="selection"/>
                    </group>
                    <group col="2">
                        <group>
                            <field name="date_from"/>
                            <field name="with_init_balance" attrs="{'readonly': ['|', ('date_from', '=', False), ('type_ledger', '!=', 'partner')]}"/>
                        </group>
                        <group>
                            <field name="date_to"/>
                            <field name="rem_futur_reconciled" attrs="{'readonly': [('date_to', '=', False)]}"/>
                        </group>
                    </group>
                    <group>
                        <field name="journal_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                    <group col="3">
                        <field name="partner_ids" widget="many2many_tags" options="{'no_create': True}" attrs="{'invisible': [('type_ledger', '!=', 'partner')]}"/>
                    </group>
                    <group col="4">
                        <field name="account_in_ex_clude" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="account_methode" attrs="{'invisible':[('account_in_ex_clude', '=', False)]}"/>
                    </group>
                    <group col="4">
                        <field name="sum_group_by_top" attrs="{'readonly': [('summary', '=', True)]}"/>
                        <field name="sum_group_by_bottom" attrs="{'readonly': [('summary', '=', True)]}"/>
                        <field name="init_balance_history"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_account_standard_report_menu" model="ir.actions.act_window">
            <field name="name">Standard Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.report.standard.ledger</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_report_standard_view"/>
            <field name="target">inline</field>
        </record>

        <menuitem
            id="menu_account_standard_report"
            name="Standard Report"
            sequence="20"
            parent="account_reports.account_reports_legal_statements_menu"
            action="action_account_standard_report_menu"
            groups="account.group_account_manager,account.group_account_user"/>

    </data>
</odoo>
